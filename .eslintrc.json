{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["jest"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "tabWidth": 2
      }
    ]
  },
  "env": {
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "parser": "babel-eslint"
}
