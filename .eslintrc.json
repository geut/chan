{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["jest"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true,
        "bracketSpacing": true,
        "printWidth": 120
      }
    ],
    "no-console": "off"
  },
  "env": {
    "node": true,
    "jest": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {}
  }
}
